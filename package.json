{
  "name": "automated-code-reviewer",
  "version": "1.0.0",
  "description": "AI-powered code review tool",
  "main": "src/server/index.ts",
  "scripts": {
    "start": "ts-node src/server/index.ts",
    "dev": "nodemon",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.config.e2e.js",
    "test:integration": "jest --config jest.config.integration.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate -- -d src/server/config/typeorm.config.ts",
    "migration:run": "npm run typeorm migration:run -- -d src/server/config/typeorm.config.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d src/server/config/typeorm.config.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^5.16.14",
    "@reduxjs/toolkit": "^1.9.7",
    "@tanstack/react-query": "^4.36.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.17.12",
    "@types/redis": "^4.0.10",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "pg": "^8.11.0",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^7.1.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.2.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1"
  }
}
